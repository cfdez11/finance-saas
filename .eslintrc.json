{
  "parser": "@typescript-eslint/parser",
  "extends": [
    "plugin:@typescript-eslint/recommended",
    "plugin:react/recommended",
    "./node_modules/standard/eslintrc.json",
    "next/core-web-vitals"
  ],
  "rules": {
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "never",
        "named": "never",
        "asyncArrow": "always"
      }
    ]
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}